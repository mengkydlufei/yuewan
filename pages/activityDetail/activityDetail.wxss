/* pages/activityDetail/activityDetail.wxss */
.person-detail {
  width: 100%;
  /* margin: 0 1%; */
  position: relative;
}

.swiper {
  height: 48vh;
}

.slide-image {
  width: 100vw;
  height: 48vh;
}

.detail-wrapper {
  position: absolute;
  /* margin: 1vh; */
  top: 47vh;
  left: 0;
  right: 0;
  border-top-left-radius: 1rem;
  border-top-right-radius: 1rem;
  background-color: #fff;
  margin-bottom: 1rem;
}

.order-icon {
  position: absolute;
  top: 40vh;
  right: 1vh;
  width: 2.5rem;
  height: 2.5rem;
  font-size: 2rem;
  color: #000;
  background-color: #fff;
  border-radius: 50%;
  display:flex;
  align-items:center;
  justify-content:center;
}

.basic-info {
  display: flex;
  justify-content: space-between;
}

.basic-left {
  display: flex;
  flex-direction: column;
}

.avatar {
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
}

.tag-title {
  width: 100%;
  height: 3rem;
  background-color: rgb(247, 239, 239);
  border-radius: 1rem;
  display:flex;
  align-items:center;
  font-weight:600;
  margin-bottom: 0.5rem;
}

.particular-wrapper li {
  display: flex;
}

.like-icon-wrapper {
  display:flex;
  justify-content:center;
}

.like-icon {
  font-size: 2rem;
  margin-right: 0.4rem;
}

.location {
  font-size: 0.8rem;
  color: #999;
}

.user-name {
  font-size: 1.5rem;
  font-weight: 600;
}

.activity-post-info {
  display: flex;
  flex-direction: column;
}