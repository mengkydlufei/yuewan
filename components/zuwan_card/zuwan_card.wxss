/* components/zuwan_card/zuwan_card.wxss */
.zuwan-card  {
  position: relative;
  width: 100%;
}

.card-img {
  border-radius: 15rpx;
  width: 100%; 
  height: 200px; 
  background-color: #eeeeee;
}

.card-title {
  font-size: 1rem;
}

.like-info {
  position: absolute;
  bottom: 55rpx;
  left: 8rpx;
}

.like-count {
  color: red;
  margin-left: 5rpx;
}

.like-icon {
  color: red;
}

.location-info {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  color: white;
  font-size: 0.8rem;
}

.location-name {
  font-size: 0.8rem;
}

.card-name {
  position: absolute;
  bottom: 55rpx;
  right: 8rpx;
  color: white;
  text-shadow: 2rpx 2rpx 5rpx #000;
}